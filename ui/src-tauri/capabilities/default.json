{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "enables the default permissions",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "updater:default",
    "os:default",
    "dialog:default",
    "store:default",
    "shell:default",
    {
      "identifier": "shell:allow-spawn",
      "allow": [
        {
          "name": "mpv",
          "cmd": "mpv",
          "args": true,
          "sidecar": false
        }
      ]
    }
  ]
}
