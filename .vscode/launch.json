  "version": "0.2.0",
  "configurations": [
    {
      "name": "Server: debug",
      "type": "go",
      "request": "launch",
      "mode": "exec",
      "program": "${workspaceFolder}/builddir/karaberus",
      "env": {
        "KARABERUS_DB_FILE": "${workspaceFolder}/builddir/karaberus.db"
      },
      "preLaunchTask": "Server: debug"
    },
    {
      "name": "Server: test",
      "type": "go",
      "request": "launch",
      "mode": "exec",
      "program": "${workspaceFolder}/builddir/karaberus_test",
      "env": {
        "KARABERUS_TEST_DIR": "${workspaceFolder}/tests",
        "KARABERUS_TEST_DIR_GENERATED": "${workspaceFolder}/builddir",
        "KARABERUS_DB_FILE": "file::memory:?cache=shared"
      },
      "console": "integratedTerminal",
      "preLaunchTask": "Server: test"
    },
    {
      "name": "Frontend: debug",
      "type": "node-terminal",
      "request": "launch",
      "command": "npm run dev -- --host 127.0.0.1",
      "cwd": "${workspaceFolder}/ui",
      "preLaunchTask": "Frontend: debug"
    }
  ]
}
