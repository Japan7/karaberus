{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["github>Japan7/renovate-config"],
  "postUpdateOptions": ["gomodTidy"],
  "packageRules": [
    {
      "matchDepNames": ["go"],
      "automerge": false
    },
    {
      "matchManagers": ["gomod"],
      "automerge": false
    },
    {
      "matchFileNames": ["ui/**"],
      "matchDepTypes": ["dependencies", "devDependencies"],
      "rangeStrategy": "pin"
    }
  ]
}
