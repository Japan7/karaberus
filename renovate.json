{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["github>Japan7/renovate-config"],
  "postUpdateOptions": ["gomodTidy"],
  "packageRules": [
    {
      "constraints": {
        "go": "1.23"
      }
    },
    {
      "matchFileNames": ["ui/**"],
      "matchManagers": ["npm", "cargo"],
      "matchDepTypes": [
        "dependencies",
        "devDependencies",
        "build-dependencies"
      ],
      "rangeStrategy": "pin"
    }
  ]
}
