{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["github>Japan7/renovate-config"],
  "postUpdateOptions": ["gomodTidy"],
  "constraints": {
    "go": "1.24"
  },
  "packageRules": [
    {
      "matchFileNames": ["ui/**"],
      "matchManagers": ["npm", "cargo"],
      "matchDepTypes": [
        "dependencies",
        "devDependencies",
        "build-dependencies"
      ],
      "rangeStrategy": "pin"
    },
    {
      "groupName": "Tauri dependencies",
      "groupSlug": "tauri",
      "matchDepNames": ["tauri", "tauri-*", "@tauri-apps/*"],
      "separateMajorMinor": false,
      "separateMinorPatch": false
    },
    {
      "matchPackageNames": ["bitnamilegacy/minio"],
      "allowedVersions": "<2025.5.24"
    }
  ]
}
